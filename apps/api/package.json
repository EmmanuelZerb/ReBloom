    "@hono/zod-validator": "^0.4.0",
    "bullmq": "^5.25.0",
    "ioredis": "^5.4.0",
    "zod": "^3.23.0",
    "nanoid": "^5.0.0",
    "sharp": "^0.33.0",
    "replicate": "^1.0.0",
    "dotenv": "^16.4.0",
    "pino": "^9.5.0",
    "pino-pretty": "^13.0.0",
    "mime-types": "^2.1.0",
    "jsonwebtoken": "^9.0.0"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "@types/mime-types": "^2.1.0",
    "@types/jsonwebtoken": "^9.0.0",
    "tsx": "^4.19.0",
