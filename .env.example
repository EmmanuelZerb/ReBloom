# S3-Compatible Storage (optional - for production)
# S3_BUCKET=rebloom-uploads
# S3_REGION=us-east-1
# S3_ACCESS_KEY_ID=YOUR_ACCESS_KEY
# S3_SECRET_ACCESS_KEY=YOUR_SECRET_KEY
# S3_ENDPOINT=https://s3.amazonaws.com

# =============================================
# Job Processing Configuration
# =============================================
JOB_TIMEOUT_MS=300000
JOB_MAX_RETRIES=3

# =============================================
# Upload Limits
# =============================================
MAX_FILE_SIZE_MB=20

# =============================================
# Webhook Configuration (for async processing)
# =============================================
# WEBHOOK_URL=https://your-api.com/api/webhooks/replicate
WEBHOOK_SECRET=your-webhook-secret-for-hmac-validation

# =============================================
# Auth Configuration
# =============================================
# Set to false to disable auth in development
AUTH_REQUIRED=true

# Signing key for secure URLs (defaults to WEBHOOK_SECRET if not set)
# SIGNING_KEY=your-signing-key-for-secure-urls

# =============================================
# Custom Model (optional - Phase 2)
# =============================================
CUSTOM_MODEL_ENABLED=false
# CUSTOM_MODEL_PATH=/path/to/model
# CUSTOM_MODEL_PROVIDER=replicate

# =============================================
# Frontend Configuration (Next.js)
