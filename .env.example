# ===========================================
# ReBloom Environment Configuration
# ===========================================

# API Server
API_PORT=3001
API_HOST=localhost
NODE_ENV=development

# Frontend
NEXT_PUBLIC_API_URL=http://localhost:3001

# Redis (for BullMQ queue)
REDIS_URL=redis://localhost:6379

# Replicate AI API
REPLICATE_API_TOKEN=r8_your_token_here

# Storage Configuration
# Options: "local" | "s3"
STORAGE_PROVIDER=local
STORAGE_LOCAL_PATH=./uploads

# S3 Configuration (when STORAGE_PROVIDER=s3)
S3_BUCKET=rebloom-uploads
S3_REGION=eu-west-1
S3_ACCESS_KEY_ID=
S3_SECRET_ACCESS_KEY=
S3_ENDPOINT=  # Leave empty for AWS, or set for S3-compatible (MinIO, R2, etc.)

# Job Configuration
JOB_TIMEOUT_MS=300000  # 5 minutes
JOB_MAX_RETRIES=3

# Upload Limits
MAX_FILE_SIZE_MB=20
ALLOWED_FORMATS=image/jpeg,image/png,image/webp

# Webhook (optional - for Replicate callbacks)
WEBHOOK_URL=https://your-domain.com/api/webhooks/replicate
WEBHOOK_SECRET=your_webhook_secret_here

# Custom Model (Phase 2 - Fine-tuned model)
CUSTOM_MODEL_ENABLED=false
CUSTOM_MODEL_PATH=
CUSTOM_MODEL_PROVIDER=replicate  # replicate | huggingface | local
